<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Button Styles -->
    <style name="NatureButton" parent="Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NatureList" parent="android:Widget.AbsListView">
        <!--<item callMe="android:layout_marginTop">8dp</item>-->
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <!--<item callMe="android:layout_marginBottom">8dp</item>-->

        <item name="android:textViewStyle">@style/NatureText.ListItem</item>

        <!--<item callMe="android:list">@drawable/selectable_background_light_green</item>-->

    </style>

    <style name="NatureRadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:layout_marginBottom">4sp</item>
        <item name="android:layout_marginRight">4sp</item>
        <item name="android:layout_marginLeft">4sp</item>
    </style>

    <style name="NatureImageButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- TextView Styles -->
    <style name="NatureText" parent="android:Widget.TextView">
        <item name="android:textColorHint">@color/textcolor_selector_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="NatureText.Medium">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
    </style>

    <style name="NatureText.Regular">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-regular</item>
    </style>

    <style name="NatureActiveButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/textcolor_selector</item>
    </style>

    <style name="NatureText.ListItem" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NatureText.Micro">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="NatureText.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="NatureText.Normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
    </style>
    <style name="NatureText.Condensed">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-condensed</item>
    </style>

    <style name="NatureText.Bold">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-bold</item>
    </style>

    <style name="NatureText.Light">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <style name="NatureText.Large" parent="NatureText.Normal">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

