    <!-- EditText Styles -->
    <style name="NatureEditor" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NatureEditor.Address">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <!--<item name="android:drawableRight">@drawable/pin_small</item>-->
        <item name="android:drawablePadding">4dp</item>
        <item name="android:inputType">none</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="NatureEditor.Area">
        <item name="android:minLines">5</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="NatureEditor.WithLabel">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/edittext</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:gravity">right|bottom</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NatureEditor.Field">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/edittext</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

