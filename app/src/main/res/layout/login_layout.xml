<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/auth"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/defaultPadding"
              android:paddingRight="@dimen/defaultPadding">

    <ru.altarix.mnature_androi_kotlin.base.view.InputView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_normal"
        android:theme="@style/TextInputLayoutStyle"
        custom:error_str="@string/error_login_is_empty"
        custom:hint_str="@string/login_hint"
        custom:required="true"/>

    <ru.altarix.mnature_androi_kotlin.base.view.InputView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_normal"
        android:theme="@style/TextInputLayoutStyle"
        custom:error_str="@string/error_password_is_empty"
        custom:hint_str="@string/password_hint"
        custom:input_type="textPassword"
        custom:required="true"/>
</LinearLayout>